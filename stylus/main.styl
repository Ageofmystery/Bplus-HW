@import 'nib'
@require 'mixin'
@require '__variables'

//initialize
html, body
  width 100%
  font-size 16px
.wrapper
  width 100%
  height 100%
  overflow hidden
.row
  &:after, &:before
    display none
//universal
address
  margin 0
ul
  list-style none
.active-nav
  color $col-blackblue !important
.col
  flex-direction column
.btn-blue
  color $col-white
  background $col-blue
  min-width 141px
  font 400 15px $font-karla
  letter-spacing 1px
  border-radius 25px
  padding 12px 25px !important
  &:hover
    background $col-gray
.btn-orange
  @extend .btn-blue
  background $col-orange
.article-head
  font 700 30px/24px $font-raleway
  color $col-blackblue
.article-subhead
  font 400 18px/24px $font-karla
  color $col-blackblue
.article-desc
  font 400 14px/24px $font-osans
  color $col-darkgray
.feature-head
  font 500 20px/24px $font-raleway
  color $col-blackblue
.article-desc-italic
  font italic 15px/24px $font-lora
  color $col-darkgray
.feat-ico
  width 67px
  height 67px
  background $col-whiteblue-10
  position absolute
  &:before
    content ""
    display block
    background url("../img/features-icosprite.png") no-repeat
.name-orange
  color $col-orange
  font 400 14px/20px $font-karla
.name-author
  font 400 14px/20px $font-karla
  color $col-blackblue
.label-recommend
  display block
  transform rotate(-45deg)
  font 400 12px/24px $font-karla
  color $col-white
  background $col-orange
  padding 6px 80px
  position absolute
  left -80px
  top 15px
.gray-nav
  font 400 14px/35px $font-karla
  color $col-gray
  letter-spacing 1px
  &:hover
    text-decoration none
    color $col-black
.blog-ul-list
  margin 60px 0
  padding-left 100px
  > li
    margin-bottom 25px
    &> p
      font 400 13px $font-karla
      color $col-blackblue
      letter-spacing 1px
      &> span
        color $col-orange
        margin-right 16px
.author-block
  width 100%
  display flex
  align-items center
  background $col-whiteblue-10
  > figure
    width 210px
    min-height 190px
  .article-desc
    max-width 590px
  .blog-txt-orange
    margin-bottom 15px
.soc-feed
  padding 0
  margin 0
  li
    padding-right 15px
    padding-top 10px
    a
      color $col-social
      &:hover
        color $col-blue
.blog-txt-orange
  font 400 15px $font-karla
  color $col-orange
  margin-bottom 0
  > time, .blog-author
    color $col-blackblue
  &:first-child
    padding-right 15px
    border-right 1px solid $col-blackblue
    margin-right 15px
.head-blog
  font 700 24px/24px $font-raleway
  text-decoration none
  color $col-blackblue
  &:hover
    text-decoration none
    color $col-gray
.comment
  display flex
  align-items center
  position relative
  > figure
    margin-right 30px
  .commenter-name
    font 400 15px/22px $font-karla
    color $col-blackblue
    margin-bottom 0
    &+span
      margin 0 15px
      line-height 22px
  time
    font 400 13px/22px $font-karla
    color $col-blackblue
    margin-bottom 0
  .article-desc
    margin-top 10px
    margin-bottom 0
  .comment-rep
    text-decoration none
    font 400 15px/22px $font-karla
    color $col-orange
    position absolute
    top 45px
    right 0
    &:hover
      color $col-blackblue
  &.rep-1
    margin-left 100px
  &.rep-2
    margin-left 150px
//-------------------------
.prime-header
  .logo
    margin 0
    font-size 10px
    padding 22px 0
    @media (max-width 768px)
      padding-left 20px
  .template-info
    background $col-whiteblue-10
    .template-name
      color $col-gray
      font 400 13px/50px $font-karla
      margin 0
    .phone-contact,.email-contact
      padding 0 25px 0 25px
      a
        text-decoration none
        color $col-gray
        letter-spacing 1px
        font 400 13px/50px $font-karla
        &:hover
          color $col-orange
      span
        line-height 24px
        padding-right 8px
      .fa-mobile
        font-size 25px
        vertical-align -20%
      .fa-envelope-o
        font-size 20px
        vertical-align -10%
    .phone-contact
      border-right 1px solid $col-bordergray
      a
        font-size 14px
  .template-header
    height 80px
    background $col-white
    position relative
    z-index 1000
    .navbar-toggle
      border 1px solid $col-blue
      margin 20px
    .icon-bar
      background $col-orange
    ul.navbar-nav.nav
      padding 14px 0
      background $col-white
      li > button
        width 100%
      > li:last-child
        padding-left 15px
        @media (max-width 768px)
          padding 0
      a:not(.btn-blue)
        font 400 15px $font-karla
        color $col-gray
        letter-spacing 1px
        @media (max-width 1200px)
          padding 15px 5px
        &:hover
          color $col-black
          background $col-orange
          border-radius 6px
    .fa-angle-down
      padding 0 5px
    button.dropdown-toggle
      font 400 15px $font-karla
      width 100%
      color $col-gray
      padding 15px
      background none
      border none
      &:hover
        color $col-black
        background $col-orange
        border-radius 6px
      &:focus
        border-radius 6px 6px 0 0
//------------------------------
.image-carousel
  position relative
  .item
    height 750px
    &:before
      content ""
      position absolute
      display block
      top 0
      left 0
      right 0
      bottom 0
    &:first-child:before
      background url("../img/home-img-slide-1.jpg") no-repeat center top
    &:nth-child(2):before
      background url("../img/home-img-slide-2.jpg") no-repeat center top
    &:last-child:before
      background url("../img/home-img-slide-3.jpg") no-repeat center top
    h2
      font 700 48px $font-raleway
      color $col-white
    p
      font 700 14px/36px $font-raleway
      color $col-white
      letter-spacing 1px
  li,li.active
    border 3px solid $col-white
    width 16px
    height 16px
    &.active
      background $col-white
      margin 1px
  .item.active, .next, .prev
    display flex
    flex-direction column
    justify-content center
    align-items center
  .carousel-indicators li
    position relative
    &:hover:not(.active) span
      display block
    .min-pre
      display none
      width 73px
      height 73px
      border-radius 50%
      border 3px solid $col-white
      position absolute
      left -32px
      bottom 30px
      &:after
        content ""
        border 6px solid transparent
        border-top 13px solid $col-white
        position relative
        top 78px
        left 500px
    &:first-child .min-pre
      background url("../img/home-img-slide-1.jpg") no-repeat center top
    &:nth-child(2) .min-pre
      background url("../img/home-img-slide-2.jpg") no-repeat center top
    &:last-child .min-pre
      background url("../img/home-img-slide-3.jpg") no-repeat center bottom
///-----------------------------
.begin-startup
  padding-top 100px
  .features-block
    @media (max-width 992px)
      margin-top 50px
    &+button
      margin-top 40px
    li
      position relative
      h5,p
        margin-left 97px
      &:hover > .feat-ico
        background $col-orange
      &:nth-child(1)
        .feat-ico:before
          background-position -5px -5px
          width 37px
          height 32px
        &:hover > .feat-ico:before
          background-position: -52px -5px;
      &:nth-child(2)
        .feat-ico:before
          width: 31px;
          height: 38px;
          background-position: -99px -5px;
        &:hover > .feat-ico:before
          background-position: -140px -5px;
      &:nth-child(3)
        .feat-ico:before
          width: 27px;
          height: 44px;
          background-position: -181px -5px;
        &:hover > .feat-ico:before
          background-position: -218px -5px;
//----------------------
.clients-feedback
  padding 80px 0
  background $col-whiteblue-10
  .article-desc-italic
    margin 55px 0 35px 100px
    position relative
    > span
      position absolute
      left -100px
      top 20px
      font-size 60px
      line-height 24px
      color $col-blackblue
  .article-desc
    margin 0 0 0 100px
  .cite-inner
    padding-right 40px
