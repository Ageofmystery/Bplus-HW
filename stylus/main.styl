.price-list-main
  padding 100px 0 90px
  .price-list
    ul
      margin-top 40px
      li
        background $col-white
        border 1px solid $col-whiteblue-10
        width 262px
        height 425px
        position relative
        overflow hidden
        margin-bottom 20px
        &:hover
          box-shadow 0 0 100px rgba(228, 233, 237, 0.75)
        button
          margin-bottom 35px
    p
      margin 0
    .price-name
      font 700 20px/24px $font-raleway
      color $col-blackblue
      margin-top 30px
    .price-term
      color $col-gray-25
      font 500 18px/24px $font-raleway
      padding 20px 0
      border-top 1px solid $col-whiteblue-10
      border-bottom 1px solid $col-whiteblue-10
      .symb
        padding 21px 0
        border-top 1px solid $col-orange
        font 500 18px/24px $font-raleway
        color $col-orange
    .features
      height 225px
      padding 40px 0
      > p
        color $col-darkgray
        font 400 15px/36px $font-osans
//----------------------------------
.our-team-main
  padding 100px 0
  background $col-whiteblue-10
  .our-team
    > ul
      margin-top 40px
      > li
        background $col-white
        width 262px
        height 400px
        margin-bottom 20px
        &:hover
          box-shadow 0 0 65px $col-teamhover
        button
          margin-bottom 35px
    p
      margin 0
  .team-inner
    padding 30px
//--------------------------------
.special-agreement
  padding 100px 0 0
  .container
    border-bottom 1px solid $col-bordergray
    padding-bottom 90px
  .article-head
    font-weight 500
    >span
      color $col-orange
  .article-subhead
    margin-bottom 30px
  button
    &:first-child
      margin-right 20px
//------------------------------
.main-footer
  padding-top 75px
  position relative
  .container
    padding-bottom 80px
    border-bottom 1px solid $col-bordergray
    &>*
      position relative
      z-index 2
    &:before
      content: url("../img/foot-3ang-left.svg")
      position absolute
      width 453px
      left 0
      bottom 105px
      z-index 1
  .container-fluid
    background $col-white
    position relative
    &>*
      position relative
      z-index 2
    &:before
      content url("../img/foot-3ang-right.svg")
      position absolute
      right 0
      z-index 1
      bottom -5 px
      width 502 px
    p.gray-nav
      padding 10px 0 55px
  .feature-head
    font-size 18px
    margin 0 0 15px
  .logo
    margin 0
  .end-nav
    justify-content flex-end
  .start-nav
    justify-content flex-start
  .end-nav,.start-nav
    height 180px
    margin 10px 0
    .form-control
      border-radius 0
      height 42px
      border 1px solid $col-bordergray
      font 400 14px/22px $font-karla
      color $col-gray
      letter-spacing 1px
      placeholder-style(color, $col-gray)
      placeholder-style(font, 400 12px $font-karla)
      placeholder-style(letter-spacing, 1px)
      placeholder-style(line-height, 22px)
    .input-group-btn
      > button
        width 42px
        height 42px
        padding-left 10px
        font 400 15px/20px $font-robslab
        color $col-white
        border-radius 0
        background $col-blue
        border 1px solid $col-blue
        &:hover
          background $col-gray
          border-color $col-gray
  ul
    padding 0
    margin 0
    address
      font 400 14px/35px $font-karla
      letter-spacing 1px
      color $col-black
