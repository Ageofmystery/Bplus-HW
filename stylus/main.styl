      border-radius 50%
      box-sizing border-box
  .carousel.slide
    margin-top 55px
    .carousel-inner
      line-height 270px
  .carousel-indicators
    li
      border 1px solid $col-gray
      background $col-gray
      width 12px
      height 12px
      margin 0
      &.active
        border 1px solid $col-blue
        background $col-blue
//------------------------------------
.features-all
